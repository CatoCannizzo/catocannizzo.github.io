---
import Base from "./baseLayout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SkipButton from "@/components/Buttons/SkipButton.astro";

interface Props {
  title: string;
  footbutton?: boolean;
  skipbutton?: string;
  upbutton?: boolean;
}
const { skipbutton, footbutton, title, upbutton } = Astro.props;
---

<Base title={title}>
  {skipbutton && <SkipButton skipSection={skipbutton} />}
  <div role="status" id="generalAlerts" class="sr-only"></div>

  <Header transition:persist upbutton={upbutton} /><div
    transition:animate="slide"
    class="mx-auto flex w-full flex-col items-center
  px-5">
    <slot />
  </div>
  <Footer footbutton={footbutton} />
</Base>
