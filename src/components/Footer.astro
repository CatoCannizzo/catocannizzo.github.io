---
import Social from "@comps/Social.astro";
import CopyBtn from "./reactComps/CopyBtn";
const { nobutton } = Astro.props;
---

<!--!!! Add a nav element to this footer, add a background color to this footer, add a copywright to this footer -->
<footer class="m-5 flex items-center justify-between">
  <div>
    <p>Built with <a href="https://astro.build">{Astro.generator}</a></p>
  </div>
  {
    !nobutton && (
      <div class=" hidden items-center sm:flex">
        <p>Have Feedback? Email me at Cannizzo@uw.edu</p>
        <div class="mx-2">
          <CopyBtn client:visible name="email address" text="Cannizzo@uw.edu" />
        </div>
      </div>
    )
  }
  <div class="">
    <Social platform="github" username="Catocannizzo" />
    <Social platform="linkedin" username="in/Cato-cannizzo" />
  </div>
</footer>
